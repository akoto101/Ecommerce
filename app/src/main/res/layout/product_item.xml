<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:id="@+id/card_item1"
            android:layout_width="183dp"
            android:layout_height="250sp"
            android:layout_marginLeft="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_Item1"
                    android:layout_width="184dp"
                    android:layout_height="137dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/product1"
                    tools:layout_editor_absoluteY="0dp" />

                <TextView
                    android:id="@+id/product_Title1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:text="Denim Jacket"
                    android:textStyle="bold"
                    android:typeface="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="137dp" />

                <TextView
                    android:id="@+id/product_Price"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:text="$199.00"
                    android:textColor="#46ABE1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="161dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/img_Cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:srcCompat="@drawable/shopping_cart" />

                    <ImageView
                        android:id="@+id/img_Fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/img_Cart"
                        app:srcCompat="@drawable/fav_untick" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/card_item2"
            android:layout_width="183dp"
            android:layout_height="250sp"
            android:layout_marginLeft="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_Item2"
                    android:layout_width="184dp"
                    android:layout_height="137dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/product1"
                    tools:layout_editor_absoluteY="0dp" />

                <TextView
                    android:id="@+id/product_Title2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:text="Denim Jacket"
                    android:textStyle="bold"
                    android:typeface="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="137dp" />

                <TextView
                    android:id="@+id/product_Price2"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:text="$199.00"
                    android:textColor="#46ABE1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="161dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/img_Cart2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:srcCompat="@drawable/shopping_cart" />

                    <ImageView
                        android:id="@+id/img_Fav2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/img_Cart2"
                        app:srcCompat="@drawable/fav_untick" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
</ScrollView>